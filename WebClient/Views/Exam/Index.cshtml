@{
    ViewBag.Title = "Exam List";
    var examList = ViewBag.examList as List<WebClient.Models.Exam>;
}
<style>
    .card:hover {
        cursor: pointer;
    }
</style>
<div class="container mt-4">
    <div class="row">
        <div class="mb-3">
            <a href="@Url.Action("Index", "Home")" class="text-decoration-none d-flex align-items-center text-dark">
                <i class="bi bi-arrow-left-short" style="font-size: 3rem;"></i>
                <span class="ms-4 font-weight-bold">THI THỬ ĐỀ TẠO SẴN</span>
            </a>
        </div>
    </div>
    <div class="row">
        @if (examList != null)
        {
            foreach (var exam in examList)
            {
                <div class="col-md-3 mb-3">
                    <a href="@Url.Action("Details", "Exam", new { id = exam.ExamId })" class="text-decoration-none">
                        <div class="card">
                            <div class="card-body">
                                <p>@exam.ExamId</p>
                                <h5 class="card-title">@exam.Name</h5>
                                <p class="card-text">Time: @exam.Time</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
    </div>
</div>
